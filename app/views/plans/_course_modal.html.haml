.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "Course", role: "dialog", tabindex: "-1", id: "course_{{course.id}}"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
        %h4#myModalLabel.modal-title {{course.name}} {{course.title && "- "+course.title}}
      .modal-body
        %h5
          %b Description:
        .course-description(data-ng-class="{show: show}")
          {{course.description || "Sorry, something's missing!"}}
        %a.show-text(data-ng-class="{show: !show}" data-ng-click="show = true") Show more
        %a.hide-text(data-ng-class="{show: show}" data-ng-click="show = false") Show less
        %div
          %b Units:
          {{course.units}}
      .modal-footer
        %a.info(href="/courses/{{course.id}}") More Info
        = render "plans/course_move"
        %button.btn.btn-xs.btn-default{"data-dismiss" => "modal", type: "button"} Close