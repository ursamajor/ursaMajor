<div class="header">
  <h3 class="password">Forgot your password?</h3>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div><%= f.email_field :email, autofocus: true, placeholder: "Email", :class => "input-field-top" %></div>

    <div><%= f.submit "Send password reset email", :class => "user-submit btn-primary" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
