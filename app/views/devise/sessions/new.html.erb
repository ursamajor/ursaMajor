<div class="header">
  <h3>ursaMajor</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div><%= f.email_field :email, autofocus: true, placeholder: "Email", :class => "input-field-top" %></div>

    <div><%= f.password_field :password, autocomplete: "off", placeholder: "Password", :class => "input-field-bottom" %></div>

    <div><%= f.submit "Sign in", :class => "user-submit btn-primary" %></div>
  <% end %>
  <br>

  <%= render "devise/shared/links" %>
</div>
